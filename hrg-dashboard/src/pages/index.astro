---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="HR Genie Connector">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-center mb-6">Welcome to HR Genie</h1>
      <p class="text-gray-600 mb-6 text-center">
        Connect your services to power your HR automation
      </p>
      
      <div class="space-y-4">
        <a href="/login" class="block w-full bg-indigo-600 text-white font-medium py-2 px-4 rounded-md text-center hover:bg-indigo-700">
          Login
        </a>
        <a href="/register" class="block w-full bg-white text-indigo-600 font-medium py-2 px-4 rounded-md text-center border border-indigo-600 hover:bg-indigo-50">
          Register
        </a>
      </div>
    </div>
  </div>
</MainLayout>