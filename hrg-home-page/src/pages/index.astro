};

// Feature data
const features = [
  {
    title: "Smart Resume Fetching",
    description: "Pull resumes from Google Drive with a single Slack command.",
    icon: featureIcons.resume,
  },
  {
    title: "Candidate Matching",
    description: "AI ranks resumes against job descriptions instantly.",
    icon: featureIcons.matching,
  },
  {
    title: "Slack Integration",
    description: "Control your HR workflows directly from Slack.",
    icon: featureIcons.slack,
  },
];
---

<MainLayout title="Home">
  <!-- Hero Section -->
  <section class="py-20 bg-[#0b0b0b]">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">
        Automate Your HR with AI-Powered Tools
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 mb-10 max-w-3xl mx-auto">
        Streamline hiring with Google Drive, Wellfound, and Slack integration.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/register">
          <Button
            variant="default"
            size="lg"
            className="bg-[#00d4ff] hover:bg-[#00d4ff]/90 text-black text-md px-6"
            >Get Started</Button
          >
        </a>
        <a href="#features">
          <Button
            variant="outline"
            size="lg"
            className="border-[#333] bg-transparent text-white hover:bg-[#222] text-md px-6"
            >Learn More</Button
          >
        </a>
      </div>

      <div class="mt-16">
        <div class="max-w-4xl mx-auto rounded-lg overflow-hidden shadow-xl">
          <img
            src="/hero-image.svg"
            alt="HR Genie Dashboard Preview"
            class="w-full"
            width="1200"
            height="750"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-[#181818]">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-16 text-white">
        Key Features
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {
          features.map((feature) => (
            <Card className="bg-[#181818] border-[#333] text-white">
              <CardHeader>
                <div class="mb-4 w-12 h-12 rounded-lg bg-[#00d4ff10] flex items-center justify-center text-[#00d4ff]">
                  <Fragment set:html={feature.icon} />
                </div>
                <CardTitle>{feature.title}</CardTitle>
              </CardHeader>
              <CardContent>
                <p class="text-gray-400">{feature.description}</p>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-20 bg-[#0b0b0b]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-16 text-white">
        Simple, Transparent Pricing
      </h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <Card className="bg-[#121212] border-[#333] text-white">
          <CardHeader>
            <CardTitle>Free</CardTitle>
            <CardDescription>
              <span
                class="text-3xl font-bold bg-gradient-to-r from-[#10B981] to-[#3B82F6] bg-clip-text text-transparent"
                >$0</span
              >
              <span class="text-gray-400">/month</span>
            </CardDescription>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2 text-left mb-6">
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Up to 10 resumes/month</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Basic resume matching</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Email support</span>
              </li>
            </ul>
          </CardContent>
          <CardFooter>
            <a href="/signup" class="w-full">
              <Button
                variant="outline"
                className="w-full border-[#333] bg-transparent text-white hover:bg-[#222]"
                >Sign Up Free</Button
              >
            </a>
          </CardFooter>
        </Card>

        <Card className="bg-[#121212] border-[#00d4ff] text-white">
          <CardHeader>
            <div
              class="bg-[#00d4ff] text-black text-xs rounded-full px-3 py-1 inline-block mb-2"
            >
              POPULAR
            </div>
            <CardTitle>Pro</CardTitle>
            <CardDescription>
              <span
                class="text-3xl font-bold bg-gradient-to-r from-[#10B981] to-[#3B82F6] bg-clip-text text-transparent"
                >$29</span
              >
              <span class="text-gray-400">/month</span>
            </CardDescription>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2 text-left mb-6">
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Up to 100 resumes/month</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Advanced AI matching</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Slack integration</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Priority support</span>
              </li>
            </ul>
          </CardContent>
          <CardFooter>
            <a href="/signup" class="w-full">
              <Button
                className="w-full bg-[#00d4ff] hover:bg-[#00d4ff]/90 text-black"
                >Start Free Trial</Button
              >
            </a>
          </CardFooter>
        </Card>

        <Card className="bg-[#121212] border-[#333] text-white">
          <CardHeader>
            <CardTitle>Enterprise</CardTitle>
            <CardDescription>
              <span
                class="text-3xl font-bold bg-gradient-to-r from-[#10B981] to-[#3B82F6] bg-clip-text text-transparent"
                >Custom</span
              >
              <span class="text-gray-400"></span>
            </CardDescription>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2 text-left mb-6">
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Unlimited resumes</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Custom integrations</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>Dedicated support</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2 text-[#00d4ff]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
                >
                <span>On-premises option</span>
              </li>
            </ul>
          </CardContent>
          <CardFooter>
            <a href="/contact" class="w-full">
              <Button
                variant="outline"
                className="w-full border-[#333] bg-transparent text-white hover:bg-[#222]"
                >Contact Sales</Button
              >
            </a>
          </CardFooter>
        </Card>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 bg-[#181818]">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="md:w-1/2">
          <h2 class="text-3xl font-bold mb-6 text-white">Our Mission</h2>
          <p class="text-gray-400 text-lg mb-6">
            We're here to simplify HR with AI and integrations, helping
            companies hire smarter and faster.
          </p>
          <p class="text-gray-400 text-lg mb-8">
            Our team of HR experts and engineers have built HR Genie to solve
            the most common challenges in the hiring process, from resume
            screening to candidate matching and communication.
          </p>
          <a href="#" class="text-[#00d4ff] hover:underline font-medium"
            >Learn more about us →</a
          >
        </div>
        <div class="md:w-1/2">
          <img
            src="/images/our_mission.png"
            alt="HR Genie Team"
            class="rounded-lg shadow-lg"
            width="600"
            height="400"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="cta" class="py-20 relative">
    <div class="absolute inset-0 z-0">
      <img
        src="/images/background.png"
        alt="Technology Background"
        class="w-full h-full object-cover object-center"
      />
      <div class="absolute inset-0 bg-blue-900/70"></div>
    </div>
    <div
      class="container mx-auto px-4 text-center relative z-10 text-white py-10 md:py-16"
    >
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
        Ready to Automate Your HR?
      </h2>
      <p class="text-lg md:text-xl text-white/90 mb-10 max-w-2xl mx-auto">
        Sign up today and start streamlining your hiring process.
      </p>
      <a href="/signup">
        <Button
          variant="default"
          size="lg"
          className="bg-[#00d4ff] hover:bg-[#00d4ff]/90 text-black text-md px-8 py-3"
          >Sign Up Now</Button
        >
      </a>
    </div>
  </section>
</MainLayout>
