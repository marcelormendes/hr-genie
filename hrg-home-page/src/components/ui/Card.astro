---
interface Props {
  title?: string;
  class?: string;
  shadow?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  rounded?: 'none' | 'sm' | 'md' | 'lg' | 'full';
  border?: boolean;
}

const {
  title,
  class: className = '',
  shadow = 'md',
  padding = 'md',
  rounded = 'md',
  border = false,
} = Astro.props;

const shadowClasses = {
  none: '',
  sm: 'shadow-sm',
  md: 'shadow',
  lg: 'shadow-lg',
  xl: 'shadow-xl',
};

const paddingClasses = {
  none: 'p-0',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const roundedClasses = {
  none: 'rounded-none',
  sm: 'rounded-sm',
  md: 'rounded-md',
  lg: 'rounded-lg',
  full: 'rounded-full',
};

const borderClass = border ? 'border border-gray-200' : '';
const classes = `bg-white ${shadowClasses[shadow]} ${paddingClasses[padding]} ${roundedClasses[rounded]} ${borderClass} ${className}`;
---

<div class={classes}>
  {title && <h3 class="text-xl font-bold mb-4">{title}</h3>}
  <slot />
</div> 